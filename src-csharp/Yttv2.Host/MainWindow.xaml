<Window x:Class="Yttv2.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Yttv2 Host (C#)" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">
    
    <Grid>
        <!-- The Main WebView (Your React App) -->
        <!-- DefaultBackgroundColor="Transparent" allows us to see through to the window background if needed later for MPV -->
        <wv2:WebView2 Name="MainWebView" 
                      DefaultBackgroundColor="Transparent"
                      Source="http://localhost:1420/" />
    </Grid>
</Window>
